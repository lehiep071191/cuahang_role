
<h1>Trang Tao Moi San Pham</h1>
<div style ="max-width: 450px">
<%= form_for [:admin,@product] do |f|%>
<%= render 'shared/error_messages', object: f.object%>
    <div>
        <label for="name">Ten San Pham</label>
        <%= f.text_field :name, class: "form-control" %>
    </div>
    <div>
        <label for="name">Hinh Anh</label>
        <%= f.text_field :image_url, class: "form-control" %>
    </div>
    <div>
        <label for ="category_id"> Hang San Xuat</label>
        <select name = "production[category_id]" class ="form-control">
            <% categories.each do |category|%>
                <option value ="<%= category.id%>" ><%= category.category_name%></option>
            <%end%>
        <select>
    </div>
    <div>
        <label for="name">Mo Ta San Pham</label>
        <%= f.text_area :description, class: "form-control"%>
    </div>
    <div style = "max-width: 350px">
        <%= f.fields_for :production_details do |production_detail|%>
            <%= render 'production_detail_fields', f: production_detail %>
        <%end%>
    </div>
    <div class="links">
        <%= link_to_add_association 'detail', f, :production_details, class: "btn btn-success" %>
    </div>
    <div>
        <%= f.submit 'create'%>
    </div>
<%end%>
</div>